{
	"appId": "com.ecoPoints.App",
	"appName": "Ecopoints App",
	"webDir": "dist",
	"bundledWebRuntime": false,
	"server": {
		"androidScheme": "https",
		"hostname": "app.ecopoints.local"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"launchAutoHide": true,
			"androidScaleType": "CENTER_CROP",
			"backgroundColor": "#00b975"
		},
		"StatusBar": {
			"overlaysWebView": false,
			"style": "DARK",
			"backgroundColor": "#c6d4cc"
		},
		"Camera": {
			"permissions": [
				{
					"alias": "camera",
					"reason": "Necesitamos acceso a la c치mara para escanear c칩digos QR en las estaciones de reciclaje."
				}
			]
		},
		"CameraPreview": {
			"parent": "body",
			"className": "camera-preview",
			"position": "rear"
		},
		"Geolocation": {
			"permissions": [
				{
					"alias": "fine",
					"reason": "Necesitamos tu ubicaci칩n para mostrarte las estaciones de reciclaje m치s cercanas."
				}
			]
		},
		"PushNotifications": {
			"presentationOptions": [
				"badge",
				"sound",
				"alert"
			]
		}
	},
	"packageClassList": [
		"CameraPreview",
		"CAPCameraPlugin",
		"DevicePlugin",
		"GeolocationPlugin",
		"KeyboardPlugin",
		"LocalNotificationsPlugin",
		"PushNotificationsPlugin",
		"SplashScreenPlugin",
		"StatusBarPlugin"
	]
}
