{
	"appId": "com.ecoPoints.App",
	"appName": "Ecopoints App",
	"webDir": "build",
	"server": {
		"androidScheme": "https",
		"hostname": "app.ecopoints.local"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"launchAutoHide": true,
			"androidScaleType": "CENTER_CROP",
			"splashImmersive": false,
			"backgroundColor": "#00b975"
		},
		"StatusBar": {
			"overlaysWebView": false,
			"style": "DARK",
			"backgroundColor": "#c6d4cc"
		},
		"Camera": {
			"permissions": [
				{
					"alias": "camera",
					"reason": "Necesitamos acceso a la c치mara para escanear los c칩digos QR de las estaciones de reciclaje."
				}
			]
		},
		"Geolocation": {
			"permissions": [
				{
					"alias": "fine",
					"reason": "Necesitamos tu ubicaci칩n para mostrarte las estaciones de reciclaje m치s cercanas."
				}
			]
		},
		"PushNotifications": {
